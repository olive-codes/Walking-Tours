<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashCS"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E2AE88F">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/splashToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#07B865"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SplashToolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Walking Tours"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/splashToolbar"
        app:layout_constraintStart_toStartOf="@+id/splashToolbar"
        app:layout_constraintTop_toTopOf="@+id/splashToolbar" />

    <ImageView
        android:id="@+id/splashImageTitle"
        android:layout_width="363dp"
        android:layout_height="258dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashToolbar"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/splashImageLogo"
        android:layout_width="107dp"
        android:layout_height="121dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashImageTitle"
        app:srcCompat="@drawable/walker_right" />

    <ProgressBar
        android:id="@+id/splashProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="75dp"
        android:layout_height="73dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashImageLogo" />

</androidx.constraintlayout.widget.ConstraintLayout>